@model IEnumerable<TempMotoWeb.Models.Medicao>

@{
    ViewData["Title"] = "Historico";
}

@section Scripts {
    <meta http-equiv="refresh" content="300" />
}

<h1 style="color:#3217ea;">Histórico</h1>

<table class="table">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.Ph)</th>
            <th>@Html.DisplayNameFor(model => model.Temperatura)</th>
            <th>@Html.DisplayNameFor(model => model.Data_Medicao)</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Ph)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Temperatura)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Data_Medicao)
                </td>
                <td>
                    <!--<a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |-->
                    <a class="btn btn-primary" asp-action="Details" asp-route-id="@item.Id">Detalhes</a>
                    <!--< a asp - action = "Delete" asp - route - id = "@item.Id" >| Delete </ a >-->
                </td>
            </tr>
        }
    </tbody>
</table>